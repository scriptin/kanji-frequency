---
/**
 * @description A thin wrapper around {@link CoverageChart}
 * which exposes only text labels for i18n purposes.
 */

import CoverageChart, { Props as ChartProps } from './CoverageChart.astro';

import aozoraCharacters from '@data/aozora_characters.csv';
import wikipediaCharacters from '@data/wikipedia_characters.csv';
import newsCharacters from '@data/news_characters.csv';

export interface Props extends Pick<ChartProps, 'labels' | 'class'> {}

const { labels, class: className } = Astro.props;
---

<CoverageChart
  class={className}
  width={400}
  height={250}
  margin={30}
  gridLines={{
    everyX: 100,
    everyY: 0.1,
  }}
  ticks={{
    size: 3,
    labelY: (yVal: number) => Math.round(yVal * 100) + '%',
  }}
  labels={labels}
  takeFirst={1000}
  datasets={{
    aozora: {
      data: aozoraCharacters,
      color: 'rgb(3 105 161)', // text-sky-700
    },
    wikipedia: {
      data: wikipediaCharacters,
      color: 'rgb(185 28 28)', // text-red-700
    },
    news: {
      data: newsCharacters,
      color: 'rgb(21 128 61)', // text-green-700
    },
  }}
/>
