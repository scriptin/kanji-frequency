---
export interface Props {
  title: string;
}

const { title } = Astro.props;

const yearStart = 2015;
const yearCurrent = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/kanji-frequency/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-sky-200">
    <div class="max-w-3xl mx-auto p-4 flex flex-col gap-4 mb-8">
      <header>
        <slot name="header" />
      </header>
      <main class="mb-8">
        <slot name="content" />
      </main>
      <footer class="text-sm text-center">
        <p class="mb-1">
          Licensed under
          <a href="http://creativecommons.org/licenses/by/4.0/">
            Creative Commons Attribution 4.0 International License
          </a>
        </p>
        <p class="mb-1">
          &copy; {yearStart}&mdash;{yearCurrent}&#32;
          <a href="https://scriptin.github.io/">Dmitry Shpika</a>
        </p>
        <p class="mb-1 opacity-30">&bull; &bull; &bull;</p>
        <p>
          Built with <a href="https://astro.build/" target="_blank">Astro</a>
          and <a href="https://tailwindcss.com/" target="_blank">Tailwind</a>
        </p>
      </footer>
    </div>
  </body>
</html>
