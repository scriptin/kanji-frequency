---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/kanji-frequency/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-sky-200">
	  <main class="max-w-3xl mx-auto p-4 flex flex-col gap-8 mb-8">
		  <slot />
		</main>
	</body>
</html>
